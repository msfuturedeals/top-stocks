---
export interface Props {
  href: string;           // absoluter oder interner Link
  title: string;
  excerpt?: string;
  image?: string;         // absolute URL empfohlen
  meta?: string;          // z.B. "7.9.2025 â€¢ Analyse"
  external?: boolean;
}
const { href, title, excerpt, image, meta, external = true } = Astro.props;
---
<a
  href={href}
  class="block group rounded-2xl overflow-hidden border bg-white shadow-sm hover:shadow-md transition-shadow"
  {...(external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
>
  {image && (
    <div class="aspect-[16/9] w-full overflow-hidden bg-zinc-100">
      <img
        src={image}
        alt={title}
        loading="lazy"
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
      />
    </div>
  )}
  <div class="p-5 sm:p-6">
    {meta && <div class="text-[12px] sm:text-xs text-zinc-500 mb-2">{meta}</div>}
    <h2 class="text-xl sm:text-2xl font-semibold tracking-tight text-zinc-900 group-hover:underline underline-offset-4">
      {title}
    </h2>
    {excerpt && <p class="mt-2 text-sm sm:text-base text-zinc-600">{excerpt}</p>}
  </div>
</a>
