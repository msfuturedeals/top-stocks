---
import Layout from '../layouts/BlogPost.astro';
import { getCollection } from 'astro:content';
const posts = await getCollection('blog'); // nutzt die vorhandene "blog"-Collection
---
<Layout frontmatter={{ title: 'News', description: 'Fundamentale Kurzmeldungen' }}>
  <h1 class="text-2xl font-bold mb-4">Neueste Beitr√§ge</h1>
  <ul class="space-y-3">
    {posts.map((p) => (
      <li>
        <a class="underline" href={`/top-stocks/blog/${p.slug}/`}>{p.data.title}</a>
        <div class="text-sm text-gray-600">{p.data.description}</div>
      </li>
    ))}
  </ul>
</Layout>
